<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<bean class="converters.RouteToStringConverter" />
		<bean class="converters.StringToRouteConverter" />
		<bean class="converters.VehicleToStringConverter" />
		<bean class="converters.StringToVehicleConverter" />
		<bean class="converters.ControlPointToStringConverter" />
		<bean class="converters.StringToControlPointConverter" />
		<bean class="converters.DriverToStringConverter" />
		<bean class="converters.StringToDriverConverter" />
		<bean class="converters.ReservationToStringConverter" />
		<bean class="converters.StringToReservationConverter" />
		<bean class="converters.PassengerToStringConverter" />
		<bean class="converters.StringToPassengerConverter" />
		<bean class="converters.AuthorityToStringConverter" />
		<bean class="converters.StringToAuthorityConverter" />
		<bean class="converters.CommentToStringConverter" />
		<bean class="converters.StringToCommentConverter" />
	</util:list>
	
</beans>